<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rsa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bk_main"
    tools:context="medic.esy.es.security_project.RSA_Activity">

    <TextView
        android:text="Welcome In AFFINE  Dashboard"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="59dp"
        android:id="@+id/textview"
        android:textStyle="normal|bold|italic"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Enter Your Message Please"
        android:textSize="20dp"
        android:background="@drawable/text2"
        android:textColor="@android:color/background_dark"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:id="@+id/textView2qq" />

    <EditText
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:textColor="@android:color/background_dark"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:visibility="visible"
        android:layout_below="@+id/textView2qq"
        android:layout_marginTop="37dp"
        android:id="@+id/affine_plain"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Your Message here" />

    <TextView
        android:text="Your Cipher text is "
        android:textSize="20dp"
        android:textColor="@android:color/background_dark"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:background="@drawable/text2"
        android:id="@+id/textView3"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/affine_plain"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Get Cipher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/affine_plain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:id="@+id/getcipheraffien" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/text"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="visible"
        android:textSize="20dp"
        android:hint="Here Will your Cipher"
        android:ems="10"
        android:layout_marginTop="44dp"
        android:id="@+id/affine_cipher"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:textColor="?attr/actionModeSplitBackground" />


</RelativeLayout>
