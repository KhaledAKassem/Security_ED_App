<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rsa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bk_main"
    tools:context="medic.esy.es.security_project.RSA_Activity">

    <TextView
        android:text="Welcome In RSA Dashboard"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="59dp"
        android:id="@+id/textview"
        android:textStyle="normal|bold|italic"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Enter Your Message Please"
        android:textSize="20dp"
        android:background="@drawable/text2"
        android:textColor="@android:color/background_dark"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:id="@+id/decript_jeo" />

    <EditText
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:textColor="@android:color/background_dark"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:visibility="visible"
        android:layout_below="@+id/decript_jeo"
        android:layout_marginTop="37dp"
        android:id="@+id/rsa_palin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Your Message here" />

    <TextView
        android:text="Your Cipher text is "
        android:textSize="20dp"
        android:textColor="@android:color/background_dark"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:background="@drawable/text2"
        android:id="@+id/textView3"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/rsa_palin"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Get Cipher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rsa_palin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:id="@+id/getcipher" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/text"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="visible"
        android:textSize="20dp"
        android:hint="Here Will your Cipher"
        android:ems="10"
        android:layout_marginTop="44dp"
        android:id="@+id/rsa_cipher"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:textColor="?attr/actionModeSplitBackground" />

    <TextView
        android:text="P: "
        android:layout_width="wrap_content"
        android:background="@drawable/text2"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rsa_cipher"
        android:layout_marginTop="42dp"
        android:id="@+id/p"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold|italic"
        android:textSize="@dimen/activity_horizontal_margin" />

    <TextView
        android:text="pp"
        android:textColor="@android:color/black"

        android:textStyle="normal|bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ppp"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_alignBaseline="@+id/p"
        android:layout_alignBottom="@+id/p"
        android:layout_toEndOf="@+id/p"
        android:layout_marginStart="32dp" />

    <TextView
        android:textStyle="normal|bold|italic"
        android:background="@drawable/text2"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView7"
        android:text="Q:" />

    <TextView
        android:text="qq"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/ppp"
        android:id="@+id/qq" />

    <TextView
        android:text="^^Plain^^"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:background="@drawable/text2"
        android:id="@+id/textView10"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/plain_again"
        android:layout_alignEnd="@+id/getcipher" />

    <TextView
        android:text="Decreption here "
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plain_again"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView10" />

</RelativeLayout>
