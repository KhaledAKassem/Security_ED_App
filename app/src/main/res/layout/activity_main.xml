<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bk_main"
    tools:context="medic.esy.es.security_project.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:text="Make Your Message Encrypted"
        android:id="@+id/header1"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp"
        android:background="@drawable/text"
        android:layout_height="60dp" />

    <TextView
        android:text="Choose One Of the Best Algorithms For Encrpted your Data"
        android:layout_width="wrap_content"
        android:background="@drawable/text2"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"

        android:layout_marginTop="41dp"
        android:id="@+id/header2"
        android:textStyle="normal|bold|italic"
        android:textSize="24sp"
        android:layout_below="@+id/header1"
        android:layout_alignParentStart="true" />

    <Button
        android:text="RSA"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/header2"
        android:layout_alignStart="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

    <Button
        android:text="AFFINE"
        android:background="@drawable/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:textColor="@color/colorPrimary"
        android:layout_marginEnd="22dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/button3" />

    <Button
        android:text="Jeofferson"
        android:padding="4dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:text="Transposition"
        android:padding="4dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/button"
        android:layout_toStartOf="@+id/button5" />

    <Button
        android:text="DES Cipher"
        android:padding="4dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button2"
        android:layout_marginBottom="35dp" />
</RelativeLayout>
